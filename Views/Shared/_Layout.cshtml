@{ 
    var thuocTinhs = ViewData["thuocTinhs"] as List<StudyEnglish.Models.ThuocTinh>;
    var danhMucs = ViewData["danhMucs"] as List<StudyEnglish.Models.DanhMuc>;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css/orb-ltr.min.css")
    @Styles.Render("~/Content/css/id-cta.css")
    @Styles.Render("~/Content/css/main.css")
    @Styles.Render("~/Content/css/bbcle.css")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @Styles.Render("~/Content/css/main.css")
</head>
<body style="background: url(@Url.Content("/Content/img/bg_body_center.jpg")" )>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a style="font-family: 'Roboto Mono', monospace; " class="navbar-brand" href="/">StudyEnglish</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul style="text-decoration: none; margin: 0 auto;" class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">

                            @foreach (var thuocTinh in thuocTinhs)
                            {

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @thuocTinh.tenThuocTinh
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @foreach (var danhMuc in danhMucs)
                                        {
                                            if (danhMuc.ThuocTinh.maThuocTinh == thuocTinh.maThuocTinh)
                                            {
                                                <li style="font-size: 18px;"><a class="dropdown-item" href=@danhMuc.linkDanhMuc>@danhMuc.tenDanhMuc</a></li>
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link active" href="/Thi/trac-nghiem" aria-current="page">Thi trắc nghiệm</a>
                            </li>
                        </ul>



                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>


                        <button onclick="openModel" class="btn btn-outline-primary p-0 ms-4">
                            <span style="font-size: 14px;"><i class="fa-solid fa-user"></i></span>
                            Đăng nhập
                        </button>
                    </div>
                </div>
            </nav>
        </header>

        @RenderBody()

        <div style="clear: both;"></div>
        <div id="orb-footer" class="orb-footer mt-4 bg-primary" dir="ltr">
            <div id="navp-orb-footer-promo"></div>
            <aside role="complementary">
                <div id="orb-aside" class="orb-nav-sec b-r b-g-p">
                    <div class="orb-footer-inner" role="navigation" aria-label="BBC">
                        <h2 class="orb-footer-lead">
                            Connect with me
                        </h2>
                        <div class="orb-footer-primary-links">
                            <ul class="d-flex flex-column">
                                <li><a href="#">Zalo: 0123456789</a></li>
                                <li><a href="#">Facebook: fb/StudyEnglish</a></li>
                                <li><a href="#">Email: studyenglish@gmail.com</a></li>
                                <li><a href="#">Address: HUTECH</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <footer role="contentinfo" class="bg-primary" ">
                <div id="orb-contentinfo"
                     class="orb-nav-sec b-r b-g-p">
                    <div class="orb-footer-inner">

                        <small>
                            <em class="orb-hilight">Copyright &copy; 2023 Study English.</em>
                        </small>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <div class="modal">
        <div class="modal-container">
            <div class="modal-body">
                <span class="modal-close text-black js-modal-close">
                    <i class="fa-solid fa-xmark"></i>
                </span>
                <div id="partial">
                    @Html.Partial("../Home/Login")
                    @Html.Partial("../Home/Register")
                </div>
            </div>
          </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("/Content/js/app.js")
@RenderSection("scripts", required: false)

</html>
